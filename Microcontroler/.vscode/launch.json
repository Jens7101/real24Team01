    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        { 
            "name": "Remote\_Debugger",
            "type": "debugpy",
            "request": "attach",
            "connect" : {
                "host": "192.168.7.2", // target address
                "port": 6000
            },
            "pathMappings": [
            {
                "localRoot": "${workspaceFolder}",
                "remoteRoot": "/home/ost/"
            }
            ]
    }
    ]
}